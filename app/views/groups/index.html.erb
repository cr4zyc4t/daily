<h1>Listing groups</h1>

<table class = "table">
  <tr>
   <th>Name</th>
    <th colspan=3  >Control</th>
  </tr>

<% @groups.each do |group| %>
  <tr>
    <td class = "cell"><%= group.name %></td>
     <td class = "cell"><%= link_to 'Show',:controller => :groups, :action => :show1 ,:id =>group.id%></td>
    <td class = "cell"><%= link_to 'Edit', edit_group_path(group) %></td>
    <td class = "cell"><%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />
<div>
<%= link_to 'New Group', new_group_path %>
<%= link_to 'Back', reports_path %>

</div>